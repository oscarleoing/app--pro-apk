<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardBitacora"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="6dp"
    app:cardBackgroundColor="@color/white"
    app:strokeWidth="1dp"
    app:strokeColor="#DADADA"
    app:cardCornerRadius="16dp"
    app:cardElevation="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#FFFFFF"
        android:padding="6dp">

        <!-- ===================== Fila principal ===================== -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="6dp">

            <TextView
                android:id="@+id/txtNombreCompletoFila"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#1A1A1A"
                android:textSize="17sp"
                android:textStyle="bold"
                android:paddingBottom="8dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/txtFolioGuia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#444444"
                    android:textSize="14sp"
                    android:textStyle="bold"/>

                <Space
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <ImageView
                    android:id="@+id/icExpand"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:padding="12dp"
                    android:background="@drawable/bg_expand_button"
                    android:src="@drawable/icon_expand_incidencia"
                    android:contentDescription="@string/expandir_incidencia"
                    android:clickable="true"
                    android:focusable="true"
                    android:visibility="gone"
                    app:tint="#2E2E2E" />
            </LinearLayout>

        </LinearLayout>

        <!-- ===================== Contenido colapsable ===================== -->
        <LinearLayout
            android:id="@+id/layoutDetalle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:padding="12dp"
            android:background="#F5F5F5">

            <!-- ===================== NUEVOS ELEMENTOS AÑADIDOS ===================== -->

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#CCC" />



            <!-- ===================== RESTO DE TUS CAMPOS ===================== -->

            <TextView
                android:id="@+id/txtEstatusFila"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Estatus:"
                android:textSize="13.5sp"
                android:textStyle="bold"
                android:paddingHorizontal="10dp"
                android:paddingVertical="4dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/bg_estatus_redondo"/>



            <TextView
                android:id="@+id/txtFechaFila"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fecha:"
                android:textColor="#333"
                android:textSize="13.5sp"
                android:paddingTop="4dp" />



            <TextView
                android:id="@+id/txtObsFila"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Observación:"
                android:textColor="#333"
                android:textSize="13.5sp"
                android:paddingTop="4dp" />

            <TextView
                android:id="@+id/txtFolioFila"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Folio:"
                android:textColor="#333"
                android:textSize="13.5sp"
                android:visibility="gone"
                android:paddingTop="4dp" />

            <TextView
                android:id="@+id/txtPeticionFila"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Petición:"
                android:textColor="#333"
                android:textSize="13.5sp"
                android:paddingTop="4dp" />

            <TextView
                android:id="@+id/txtDireccionCompleta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dirección:"
                android:textColor="#333"
                android:textSize="13.5sp"
                android:paddingTop="4dp" />

            <TextView
                android:id="@+id/txtDesCalle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Calle:"
                android:textColor="#333"
                android:textSize="13.5sp"
                android:visibility="gone"
                android:paddingTop="4dp" />

            <TextView
                android:id="@+id/txtDesFrac"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fraccionamiento:"
                android:textColor="#333"
                android:textSize="13.5sp"
                android:visibility="gone"
                android:paddingTop="4dp" />

            <TextView
                android:id="@+id/txtNumExt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Número Exterior:"
                android:textColor="#333"
                android:textSize="13.5sp"
                android:visibility="gone"
                android:paddingTop="4dp" />

            <TextView
                android:id="@+id/txtNumInt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Número Interior:"
                android:textColor="#333"
                android:textSize="13.5sp"
                android:visibility="gone"
                android:paddingTop="4dp" />

            <TextView
                android:id="@+id/txtIdConversacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ID Conversación:"
                android:textColor="#333"
                android:textSize="13.5sp"
                android:visibility="gone"
                android:paddingTop="4dp" />

        </LinearLayout>
    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
